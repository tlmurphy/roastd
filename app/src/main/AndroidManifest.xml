<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="net.jmhossler.roastd">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:fullBackupContent="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".maintask.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".profiletask.ProfileActivity"
      android:label="@string/profile_label" />
    <activity android:name=".searchtask.SearchActivity"
      android:theme="@style/Theme.AppCompat.Light.NoActionBar">
      <meta-data android:name="android.app.searchable"
        android:resource="@layout/searchable" />
    </activity>
    <activity
      android:name=".favoritestask.FavoritesActivity"
      android:label="@string/favorites_title" />
    <activity
      android:name=".logintask.LoginActivity"
      android:theme="@style/AppTheme.NoActionBar" />

    <meta-data
      android:name="preloaded_fonts"
      android:resource="@array/preloaded_fonts" />

    <activity android:name=".applicationtask.ApplicationActivity" />
    <activity
      android:name=".beantask.BeanActivity"
      android:theme="@style/AppTheme.NoActionBar" />
    <activity
      android:name=".drinktask.DrinkActivity"
      android:theme="@style/AppTheme.NoActionBar" />
    <activity
      android:name=".shoptask.ShopActivity"
      android:theme="@style/AppTheme.NoActionBar" />
    <activity
      android:name=".recommendationstask.RecommendationsActivity"
      android:label="@string/recommendations_title" />
  </application>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

</manifest>
